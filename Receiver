from microbit import *
import radio
import kitronik



radio.on()
radio.config(channel = 5)


def Forward():
def Right(): 
def Left(): 
def Reverse(): 
    

#Once turned on in loop below
def Startup():
    if signalsReceived == "fwd":
        Foward():
    elif signalsReceived == "right":
        Right():
    elif signalsReceived == "left":
        Left():
    elif signalsReceived == "reverse":
        Reverse():
    else:
        return:
            
    
    




While True:
    # Receive signals
    signalsReceived = radio.receive()
    
    #Startup signal
    if signalsReceived == "Startup":
        StartUp():
    
    
